
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model - extends Supabase auth.users
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  avatar    String?
  plan      UserPlan @default(FREE)
  credits   Int      @default(10)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  workflows    Workflow[]
  chatThreads  ChatThread[]
  usageRecords UsageRecord[]

  @@map("users")
}

// User subscription plans
enum UserPlan {
  FREE
  PRO
  ENTERPRISE
}

// Chat threads for conversation history
model ChatThread {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  title     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  @@map("chat_threads")
}

// Chat messages within threads
model ChatMessage {
  id         String      @id @default(uuid())
  threadId   String      @map("thread_id")
  role       MessageRole
  content    String
  metadata   Json?       // For tool calls, artifacts, etc.
  createdAt  DateTime    @default(now()) @map("created_at")

  // Relations
  thread ChatThread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

// Generated workflows
model Workflow {
  id          String        @id @default(uuid())
  userId      String        @map("user_id")
  name        String
  description String?
  content     Json          // n8n workflow JSON
  status      WorkflowStatus @default(DRAFT)
  isPublic    Boolean       @default(false) @map("is_public")
  tags        String[]      @default([])
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  // Relations
  user      User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  versions  WorkflowVersion[]
  deployments WorkflowDeployment[]

  @@map("workflows")
}

enum WorkflowStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// Workflow versions for history tracking
model WorkflowVersion {
  id         String   @id @default(uuid())
  workflowId String   @map("workflow_id")
  version    Int
  content    Json     // n8n workflow JSON
  changelog  String?
  createdAt  DateTime @default(now()) @map("created_at")

  // Relations
  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@unique([workflowId, version])
  @@map("workflow_versions")
}

// Workflow deployments to n8n instances
model WorkflowDeployment {
  id           String           @id @default(uuid())
  workflowId   String           @map("workflow_id")
  n8nInstanceUrl String         @map("n8n_instance_url")
  n8nWorkflowId String?         @map("n8n_workflow_id")
  status       DeploymentStatus @default(PENDING)
  errorMessage String?          @map("error_message")
  deployedAt   DateTime?        @map("deployed_at")
  createdAt    DateTime         @default(now()) @map("created_at")

  // Relations
  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@map("workflow_deployments")
}

enum DeploymentStatus {
  PENDING
  SUCCESS
  FAILED
}

// Usage tracking for billing and analytics
model UsageRecord {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  type      UsageType
  count     Int       @default(1)
  metadata  Json?     // Additional usage context
  createdAt DateTime  @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("usage_records")
}

enum UsageType {
  WORKFLOW_GENERATION
  FILE_PROCESSING
  DEPLOYMENT
  AI_TOKENS
}

// API keys for external integrations
model ApiKey {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  name      String
  key       String   @unique
  lastUsed  DateTime? @map("last_used")
  createdAt DateTime @default(now()) @map("created_at")
  expiresAt DateTime? @map("expires_at")

  @@map("api_keys")
}
